{
  "name": "fhstp.cdnexample",
  "version": "1.0.0",
  "description": "A simple sample project to demonstrate fhstp's gitlab ci workflow",
  "scripts": {
    "--------------Test----------": "",
    "test": "yarn js:lint && yarn css:lint",
    "--------------Basic----------": "",
    "clean:css": "rm -rf ./dist/styles",
    "clean:js": "rm -rf ./dist/js",
    "clean:img": "rm -rf ./dist/images",
    "clean": "rm -rf ./dist",
    "--------------Extensions----------": "",
    "accessibility": "a11y --delay=3 'dist/**/*.html'",
    "accessibility:afterbuild": "a11y --delay=3 'dist/**/*.html'",
    "accessibility:staging": "a11y --delay=3 staging.fhstp.ac.at",
    "accessibility:www": "a11y --delay=3 www.fhstp.ac.at",
    "-------------HTML/PUG------": "",
    "pug:dev": "node_modules/pug-cli/index.js -P -b app -o ./dist/ ./app/*.pug",
    "pug": "node_modules/pug-cli/index.js -b app -o ./dist/ ./app/*.pug",
    "--------------CSS----------": "",
    "css:lint": "./node_modules/stylelint/bin/stylelint.js --syntax scss \"app/styles/**/*.scss\" --cache --cache-location \".stylelintcache/\"",
    "css:compile": "sass --style=expanded --no-source-map --precision 6 ./app/styles/index.scss ./dist/styles/index.css",
    "css:prefix": "./node_modules/postcss-cli/bin/postcss --config .postcss.config.js -r ./dist/styles/*.css",
    "css:optimize": "./node_modules/clean-css-cli/bin/cleancss -O2 --format beautify --source-map --source-map-inline-sources -o ./dist/styles/index.css ./dist/styles/*.css",
    "css:minify": "./node_modules/clean-css-cli/bin/cleancss --source-map --source-map-inline-sources -o ./dist/styles/index.min.css ./dist/styles/*.css",
    "css:dev": "yarn css:lint && yarn css:compile && yarn css:prefix && yarn css:optimize",
    "css": "yarn css:lint && yarn css:compile && yarn css:prefix && yarn css:optimize && yarn css:minify",
    "--------------JS----------": "",
    "js:lint": "node_modules/eslint/bin/eslint.js './app/**/*.{js,jsx}'",
    "js:fix": "node_modules/eslint/bin/eslint.js --fix './app/**/*.{js,jsx}'",
    "js:dev": "yarn js:lint",
    "js": "echo \"Error: nothing specified\"",
    "--------IMAGES/ICONS------": "",
    "images:img": "node_modules/imagemin-cli/cli.js ./app/images/**/*.{jpg,jpeg,png} -o ./dist/images",
    "images:svg": "node_modules/svgo/bin/svgo --multipass -r --quiet -f app/images/svg -o dist/images/svg",
    "images": "yarn images:svg && yarn images:img",
    "--------------DEV----------": "",
    "watch": "./node_modules/watch/cli.js 'yarn css:dev && yarn js:dev && yarn images' app",
    "dev": "yarn clean && NODE_ENV=${NODE_ENV:=development} && echo $NODE_ENV && yarn watch",
    "--------------PROD----------": "",
    "prebuild": "yarn test",
    "build": "yarn clean && NODE_ENV=${NODE_ENV:=production} && echo $NODE_ENV Enviroment && yarn js && yarn css && yarn images"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.fhstp.ac.at/cdn/fhstp.cdnexample"
  },
  "bugs": "https://gitlab.fhstp.ac.at/cdn/fhstp.cdnexample/issues",
  "author": "Michael Graf <michael.graf@fhstp.ac.at>",
  "license": "MIT",
  "devDependencies": {
    "a11y": "^0.5.1",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.2",
    "clean-css-cli": "^4.3.0",
    "cssnano": "^4.1.10",
    "dotenv": "^8.0.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "imagemin-cli": "^5.0.0",
    "node-sass": "^4.12.0",
    "postcss": "^7.0.17",
    "postcss-banner": "^3.0.1",
    "postcss-cli": "^6.1.3",
    "postcss-node-sass": "^2.1.8",
    "postcss-normalize-charset": "^4.0.1",
    "prettier": "^1.18.2",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.22.9",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-order": "^3.0.1",
    "stylelint-prettier": "^1.1.1",
    "stylelint-scss": "^3.9.3",
    "svgo": "^1.3.0",
    "watch": "^1.0.2"
  }
}
