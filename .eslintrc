{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "script"
  },
  "extends": [
    "airbnb",
    "eslint:recommended",
    "prettier",
    "plugin:prettier/recommended",
    "prettier/react"
  ],
  "plugins": ["prettier"],
  "env": {
    "amd": true,
    "browser": true,
    "es6": true,
    "jquery": true,
    "node": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5",
        "jsxBracketSameLine": true,
        "parser": "flow",
        "printWidth": 120
      }
    ],
    "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }],
    "jsx-a11y/href-no-hash": ["off"],
    "eol-last": 0,
    "jsx-quotes": 1,
    "no-underscore-dangle": 1,
    "quotes": [2, "single"],
    "strict": 0,
    "camelcase": 0,
    "curly": 2,
    "eqeqeq": 2,
    "no-bitwise": 2,
    "no-caller": 2,
    "no-cond-assign": 0,
    "no-console": 0,
    "no-eq-null": 2,
    "no-undef": 2,
    "wrap-iife": ["error", "inside"],
    "no-unused-expressions": [2, {
      "allowShortCircuit": true,
      "allowTernary": true
    }],
    "no-unused-vars": [1, {
      "vars": "local"
    }],
    "no-use-before-define": [2, {
      "functions": false
    }],
    "new-cap": [1, {
      "newIsCap": true
    }]
  }
}
